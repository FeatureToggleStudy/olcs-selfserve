{
    "name": "olcs/olcs-selfserve",
    "description": "OLCS Self Service Web Site",
    "repositories": [
        {
            "packagist": false
        },
        {
            "url": "http://devrepo.shd.ci.nonprod.dvsa.aws",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-logging",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-common",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-transfer",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-utils",
            "type": "composer"
        },
        {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-auth",
            "type": "composer"
        },
        {
            "type": "composer",
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-autoload"
        },
        {
            "type": "composer",
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-testhelpers"
        },
        {
            "type": "composer",
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-devtools"
        },
        {
            "type": "composer",
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/olcs-coding-standards"

        }
    ],
    "require": {
        "php": ">=7.1",
        "zendframework/zendframework": "~2.4.0",
        "doctrine/annotations": "^1.2.3",
        "symfony/Filesystem": "~2.6.0",
        "zf-commons/zfc-rbac": "~2.4.0",
        "olcs/olcscommon": "1.0",
        "olcs/olcs-transfer": "1.0",
        "olcs/olcs-utils": "1.0",
        "olcs/olcs-auth": "1.0",
        "olcs/olcs-logging": "1.0"
    },
    "require-dev": {
        "olcs/olcs-devtools": "1.0",
        "mikey179/vfsstream": "^1.4.0",
        "olcs/olcs-testhelpers": "1.0",
        "phpstan/phpstan-shim": "^0.10.5",
        "phpstan/phpstan-mockery": "^0.10.2",
        "mockery/mockery": "^1.2.0",
        "johnkary/phpunit-speedtrap": "^3.0"
    },
    "autoload": {
        "classmap": [
            "module/Olcs/src",
            "vendor/olcs/olcscommon/Common/src/Common"
        ],
        "psr-4": {
            "Common\\": "vendor/olcs/olcscommon/Common/src/Common"
        }
    },
    "config": {
        "preferred-install": "dist",
        "secure-http" : false,
        "platform": {
            "php": "7.1.16"
        }
    },
    "scripts": {
        "ut": "vendor/bin/phpunit -c test/phpunit.xml --stop-on-failure",
        "review": "vendor/bin/review",
        "cs": "vendor/bin/phpcs --severity=1 --standard=vendor/olcs/coding-standards/Profiles/DVSA/CS/ruleset.xml",
        "coverage": "vendor/bin/phpunit -c test/phpunit.xml --coverage-html ./test/coverage/html",
        "sonar": "vendor/bin/phpunit -c test/phpunit.xml --coverage-clover ./test/coverage/coverage-report.clover --log-junit ./test/coverage/log.junit",
        "update-syms": "vendor/bin/composer-update-syms"
    }
}
